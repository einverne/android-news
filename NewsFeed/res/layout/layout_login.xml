<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:background="#f2f2f3"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@id/textView_newstitle"
            style="@style/custom_shadow_black_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10.0dip"
            android:text="用户登录："
            android:textSize="16.0dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/logb" />

            <EditText
                android:id="@+id/editText_username"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20.0dip"
                android:layout_weight="1"
                android:ems="10"
                android:hint="用户名或Email" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_pass" />

            <EditText
                android:id="@+id/editText_psw"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_denglu"
                android:layout_width="120dp"
                android:layout_height="44dp"
                 android:layout_marginLeft="10dp"
                android:background="@color/button_background"
                android:onClick="onSubmitClick"
                android:text="登录" />

            <Button
                android:id="@+id/button_quxiao"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                 android:layout_marginLeft="15dp"
                	android:background="@color/button_background"
                android:onClick="onCancelClick"
                android:text="取消" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>